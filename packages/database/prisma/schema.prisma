// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTGRES_PRISMA_URL")
  directUrl    = env("POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

// This is a stub model.
// Delete it and add your own Prisma models.
model Page {
  id   Int    @id @default(autoincrement())
  name String
}

model Form {
  id             String         @id @default(uuid())
  userId         String // Clerk user ID
  title          String
  encodedForm    String // Current version's encrypted & compressed form
  formHistory    String[] // Array of previous versions
  currentVersion Int            @default(1)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  viewCount      Int            @default(0)
  responseCount  Int            @default(0)
  responses      FormResponse[] // Relation to responses
}

model FormResponse {
  id              String   @id @default(uuid())
  formId          String // Reference to Form
  form            Form     @relation(fields: [formId], references: [id])
  formVersion     Int // Which version was responded to
  encodedResponse String // Encrypted & compressed response
  submittedAt     DateTime @default(now())
  submitterIp     String?
  userAgent       String?

  @@index([formId])
}
